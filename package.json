{
  "name": "windowmanagerdemo",
  "version": "0.0.1",
  "description": "Demonstrates the Eikos windowmanager module in Electron, OpenFin, and Web",
  "company": "Eikos Partners",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "openfin": "node_modules/.bin/openfin --launch --config http://localhost:5000/app.json",
    "electron": "electron ./electron/app/windowmanager --debug=5858 --endpoint=http://localhost:5000/ --config=http://localhost:5000/app.json",
    "electron-build": "node ./server/electronBuildCurrent.js"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "keywords": [
    "Electron",
    "OpenFin",
    "Node.js",
    "scaleJS",
    "windowmanager"
  ],
  "author": "Ernie Salazar",
  "license": "MIT",
  "dependencies": {
    "express": "^4.14.0",
    "windowmanager": "^0.12.9",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^1.4.14",
    "electron-builder": "^12.3.1",
    "openfin-cli": "^1.1.5"
  },
  "electronBuilder": {
    "productName": "Eikos Partners windowmanager Demo",
    "appId": "EikosPartners.WindowManagerDemo",
    "asar": true,
    "win": {
      "iconUrl": "http://localhost:5000/images/eikos-logo-multi.ico",
      "icon": "electron/resources/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/resources/icon.ico",
      "installerHeader": "electron/resources/mui_headerimage.bmp",
      "installerHeaderIcon": "electron/resources/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "mac": {
      "target": "dmg"
    },
    "directories": {
      "output": "electron/output",
      "app": "electron/app",
      "buildResources": "electron/resources"
    }
  }
}
